<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:signature="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.mayixuan.fish_pear_donkey.Signature">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttons_container"
        android:id="@+id/signature_pad_container"
        tools:ignore="UnknownId">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:layout_above="@+id/signature_pad_description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/signature_pad_description"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:text="@string/agreement" />

        <com.example.mayixuan.views.SignaturePad
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/signature_pad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"/>
    </RelativeLayout>


    <Button
        android:id="@+id/clear_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:background="@mipmap/clear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/blue_button"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:background="@mipmap/blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/red_button"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:background="@mipmap/red"
        android:layout_toRightOf="@+id/blue_button"
        android:layout_alignParentBottom="true" />
    <Button
        android:id="@+id/black_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/black"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/red_button"
        android:layout_toEndOf="@+id/red_button" />

    <Button
        android:id="@+id/bigpen_button"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@mipmap/bigpen"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/clear_button"
        android:layout_toStartOf="@+id/clear_button"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp" />
    <Button
        android:id="@+id/smallpen_button"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@mipmap/pen"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/bigpen_button"
        android:layout_toStartOf="@+id/bigpen_button" />



    <Button
        android:id="@+id/save_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@mipmap/save" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="40dp"
        android:layout_weight="0.11"
        android:layout_height="40dp"
        android:background="@mipmap/exit_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
